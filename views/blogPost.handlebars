<div class="text-center">
    <h2>{{title}}</h2>
    <p>Posted by {{user.user_name}} on {{format_date date_created}}</p>
    <p>{{content}}</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h3>Comments Section</h3>

        <div class="form comment-form">
            <div class="forms">
                <label for="comment">Comment on this post:</label>
                <textarea class="form-input" type="text" id="comment" />
            </div>
        </div>
        {{#if comments.length}}
        <div class="col-md-6 comments">
        <h4>Previous Comments:</h4>

        {{#each comments as |comment|}}
        <div class="row">
            <p>{{comment.content}}</p>
        </div>
        </div>
    </div>
</div>

<script src="/public/js/blogPost.js"></script>